{
  "name": "webp",
  "version": "1.0.0",
  "description": "A web page dedicated to spread awareness on mental health and its impact in today's society",
  "main": "script.js",
  "scripts": {
    "start": "node server.js",

    "server": "nodemon server.js",

    "client": "npm start --prefix client",

    "client-install": "npm install --prefix client",

    "dev": "concurrently \"npm run server\" \"npm run client\"",

    "render-postbuild": 

    "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "mental-health",
    "condition",
    "help",
    "mind",
    "rest",
    "mindfull",
    "support"
  ],
  "author": "Regina Gomez, Fatima Walls & Carlos Bejar",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "mongodb": "^6.11.0",
    "mongoose": "^8.8.3",
    "nodemon": "^3.1.7",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}